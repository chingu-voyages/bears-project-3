# base image
FROM node:10.14-alpine

# set working directory
RUN mkdir -p /src
WORKDIR /src

# add `/src/node_modules/.bin` to $PATH
ENV PATH /src/node_modules/.bin:$PATH

# install and cache app dependencies
COPY package.json /src/package.json
RUN yarn install

COPY . /src

EXPOSE 3000

# start app
CMD ["yarn", "start"]
